<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.brandnewday"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />
	
    
	<uses-permission android:name="android.permission.WRITE_SETTINGS"/>
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	
    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:name="MyApplication">
        
 		<service
  			android:name="AlarmService">
		</service> 
 		
 		<receiver android:name=".AlarmReceiver"/>
 
        <activity
            
            android:name="com.example.brandnewday.BrandNewDay"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.brandnewday.AlarmSettings"
            android:label="@string/title_activity_alarm_settings"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="com.example.brandnewday.WakingTime"
            android:label="@string/title_activity_waking_time"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="com.example.brandnewday.MyPlaylist"
            android:label="@string/title_activity_my_playlist"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="com.example.brandnewday.Playlist"
            android:configChanges="orientation|screenSize" >
        </activity>
        
        <service android:name=".MyAlarmService" />
        
    
    </application>

</manifest>
